{
  "$schema": "https://raw.githubusercontent.com/govuk-one-login/quality-gates/refs/tags/v0.2.0/schemas/schema.json",
  "services": [
    {
      "service-tag": "ipr-front",
      "quality-gates": [
        {
          "check-types": ["secret scanning"],
          "provider": "GitHub",
          "phase": "pre-merge",
          "config": {
            "file": ".github/workflows/pre-commit.yml",
            "path": "jobs.pre-commit"
          }
        },
        {
          "check-types": ["code style and linting", "unit", "unit test coverage"],
          "provider": "GitHub",
          "phase": "pre-merge",
          "config": {
            "file": ".github/workflows/checks.yml",
            "path": "jobs.run-tests"
          }
        },
        {
          "check-types": ["code style and linting", "unit", "unit test coverage"],
          "provider": "GitHub",
          "phase": "pre-merge",
          "config": {
            "file": ".github/workflows/pull-request-sonar.yml",
            "path": "jobs.run-tests"
          }
        },
        {
          "check-types": ["vulnerability detection"],
          "provider": "GitHub",
          "phase": "pre-merge",
          "config": {
            "file": ".github/dependabot.yml"
          }
        }
      ]
    }
  ]
}